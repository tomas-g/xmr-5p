#############################################
# Kraken + XMR Bot Configuration (.env example)
#############################################

# Kraken API Credentials
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Market/pair
PAIR=XMRUSD

# Trading Controls
MAX_POSITION_SIZE=100.00
MIN_TRADE_AMOUNT=10.00
TRADING_ENABLED=true

# Threshold Strategy
# Buy if price drops this much from session high; sell after this rise from entry
PRICE_DROP_THRESHOLD=0.05   # 5% drop buy
PRICE_RISE_THRESHOLD=0.05   # 5% rise sell

# Loop cadence (seconds)
LOOP_SLEEP_SECONDS=30

# Logging
# Valid values (case-insensitive): DEBUG, INFO (default), WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# true -> write to trading_bot.log; anything else -> console only
LOG_TO_FILE=false

# Web UI
PORT=8000

# Trade ledger CSV path
TRADES_CSV=trades.csv
